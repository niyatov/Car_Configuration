@using Car_Configuration.Dtoes;
@model CreateWheelColorDto

<form method="post" class="mx-1 mx-md-4" enctype="multipart/form-data">

    <div class="mb-3">
        <label for="ModelName" class="form-label">ModelName</label>
        <input type="text" asp-for="ModelName" class="form-control">
        <span class="text-danger" asp-validation-for="ModelName"></span>
    </div>

     <div class="mb-3">
        <label for="ColorName" class="form-label">ColorName</label>
        <input type="text" asp-for="ColorName" class="form-control">
        <span class="text-danger" asp-validation-for="ColorName"></span>
    </div>

     <div class="mb-3">
        <label for="WheelName" class="form-label">WheelName</label>
        <input type="text" asp-for="WheelName" class="form-control">
        <span class="text-danger" asp-validation-for="WheelName"></span>
    </div>

    <div class="form-group">
        <label for="file">WheelImage</label>
        <input type="file" class="form-control-file" name="file">
    </div>

    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-primary btn-lg">Create</button>
    </div>

</form>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
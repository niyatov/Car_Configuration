@model List<GetModelsVM>?

@if (Model != null && Model.Count() > 0)
{
    <table class="table" >
        <thead>

            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">IsReady</th>
                <th scope="col">ColorAmount</th>
                <th scope="col">WheelAmount</th>
                <th scope="col">ColorWheelAmount</th>
                <th scope="col">Statistics</th>
            </tr>

        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th scope="row">@(i+1)</th>
                    <td> <a asp-controller="Models" asp-action="GetModel" asp-route-modelId="@Model[i].Id" class="btn btn-info"> @Model[i].Name </a></td>
                    <th scope="row">@Model[i].IsReady</th>
                    <th scope="row">@Model[i].ColorsAmount</th>
                    <th scope="row">@Model[i].WheelsAmount</th>
                    <th scope="row">@Model[i].ColorWheelsAmount</th>
                    <td> <a asp-controller="Models" asp-action="GetStatistics" asp-route-modelId="@Model[i].Id" class="btn btn-info"> statistic </a></td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div style="text-align:center;">
        <h1>no models</h1>
    </div>
    <br />
    <br />
}

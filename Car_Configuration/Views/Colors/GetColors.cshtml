@model List<GetColorsVM>?

@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>

            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
            </tr>

        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td> <a asp-controller="Colors" asp-action="GetColor" asp-route-colorId="@Model[i].Id" class="btn btn-info"> @Model[i].Name </a></td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div style="text-align:center;">
        <h1>no colors</h1>
    </div>
    <br />
    <br />
}


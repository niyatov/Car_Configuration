<form method="post" asp-action="UpdateWheelColorModel" asp-route-wheelColorModelId="@ViewData["wheelColorModelId"]" class="mx-1 mx-md-4" enctype="multipart/form-data">
    
    
    <div class="form-group">
        <label for="file">Image</label>
        <input type="file" class="form-control-file" id="file" name="file">
    </div>

    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-warning btn-lg">Update</button>
    </div>

</form>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>


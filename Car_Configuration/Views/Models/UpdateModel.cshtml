@using Car_Configuration.Dtoes;
@model UpdateModelDto

<form method="post" asp-action="UpdateModel" asp-route-modelId="@ViewData["modelId"]" class="mx-1 mx-md-4" enctype="multipart/form-data">
    
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

     <div class="mb-3">
    <label for="Name" class="form-label">IsReady</label>
    <input asp-for="IsReady" type="checkbox" value="true" />
        <input asp-for="IsReady" type="hidden" value="false" />
    </div>


    <div class="form-group">
        <label for="file">Image</label>
        <input type="file" class="form-control-file" id="file" name="file">
    </div>

    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-warning btn-lg">Update</button>
    </div>

</form>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<br />
<br />
<td> <a asp-controller="Models" asp-action="GetModel" asp-route-modelId=@ViewData["modelId"] class="btn btn-info"> Go to Category </a></td>